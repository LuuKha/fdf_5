<h1><%= "Information order" %></h1>
<p><%= t "order.order_id" %> : <%= @order.id %></p>
<p><%= t "order.created_at" %> : <%= @order.created_at %></p>
<p><%= t "order.user_name" %> : <%= @order.user.name %></p>
<p><%= t "order.user_id" %> : <%= @order.user.id %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t "order.product_order_id" %></th>
      <th><%= t "order.product_order_name" %></th>
      <th><%= t "order.product_quantity" %></th>
      <th><%= t "order.product_price" %></th>
    </tr>
  </thead>
  <tbody>
    <% @product_orders.each do |product_order| %>
      <tr>
        <td><%= product_order.product_id %></td>
        <td><%= product_order.product.name %></td>
        <td><%= product_order.number %></td>
        <td><%= product_order.product.price %></td>
      </tr>  
    <% end %>
    <tr>
      <td colspan="3"><strong class="order-cost"><%= t "order.cost" %> : </strong></td>
      <td><strong><%= @order.cost %></strong></td>
    </tr>
  </tbody>
</table>
